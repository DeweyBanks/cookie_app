<div class="front-matter">
  <h1>Welcome to Cookie CRUD</h1>
  <p><em>Where all the cookie lovers come to get crumbly!</em></p>
  <p>Login</p>
  <div class="login">
    <%= form_tag(session_path) do %>
      <%= label_tag(:email) %><br/>
      <%= text_field_tag(:email) %><br/>
      <%= label_tag(:password) %><br/>
      <%= password_field_tag(:password) %><br/>
      <%= submit_tag('Login') %>
    <% end %>
    <h1 style="color: red"><%= flash[:error] %></h1>
  </div>
  <p><%= link_to('Sign up', new_user_path) %>
</div>
